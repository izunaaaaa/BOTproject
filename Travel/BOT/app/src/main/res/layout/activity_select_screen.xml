<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activities.SelectActivity">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="match_parent"
        android:layout_height="288dp"

        android:bufferType="spannable"
        android:gravity="center"
        android:paddingEnd="100dp"
        android:paddingRight="100dp"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="0"
        android:text="@string/b_o_t_n_beautiful_n_our_n_travel"
        android:textColor="#6695E3"
        android:textSize="40sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/fly" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/img_10"
        android:weightSum="2">

    <androidx.cardview.widget.CardView
        android:id="@+id/purpose"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="90dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:scaleType="centerCrop"
            android:src="@drawable/img_5" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="83dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="여행 목적\n\n"
            android:textColor="#ebf7f9"
            android:textSize="25sp"
            android:textStyle="bold">

        </TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/theme"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginRight="60dp"
        app:cardCornerRadius="90dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:scaleType="centerCrop"
            android:src="@drawable/img_2" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="여행 테마\n\n"
            android:textColor="#0081cc"
            android:textSize="25dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
