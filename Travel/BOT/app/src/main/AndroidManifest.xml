<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bot">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Design.NoActionBar">

        <activity
            android:name="com.example.bot.ui.activities.SplashActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.bot.ui.activities.MainActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:launchMode="singleTop"/>
        <activity
            android:name="com.example.bot.ui.activities.ThemeActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:launchMode="singleTop"/>
        <activity
            android:name="com.example.bot.ui.activities.DetailActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:launchMode="singleTop"/>
        <activity
            android:name="com.example.bot.ui.activities.SelectActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:launchMode="singleTop"/>
        <activity
            android:name="com.example.bot.ui.activities.MapActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:launchMode="singleTop"/>
        <activity
            android:name="com.example.bot.ui.activities.CourseSelectActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:launchMode="singleTop"/>
        <activity
            android:name="com.example.bot.ui.activities.CourseActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:launchMode="singleTop"/>

    </application>

</manifest>